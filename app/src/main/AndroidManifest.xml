<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gko.app.gexam" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".student.Splashscreen"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".student.RuleActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_rule"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".student.QRActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_qr"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".student.CoureseDetail_Activity"
            android:configChanges="orientation"
            android:label="@string/title_activity_courese_detail_"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".student.QuestionPageActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_question_page"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".committed.Committy_login"
            android:configChanges="orientation"
            android:label="@string/title_activity_committy_login"
            android:screenOrientation="portrait"
            android:theme="@style/PopupTheme"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".committed.com_fragment.ComFragActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_com_frag"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.google.zxing.client.android.CaptureActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".student.MainActivity"
            android:label="@string/title_activity_splashscreen"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
            >
        </activity>
    </application>

</manifest>
